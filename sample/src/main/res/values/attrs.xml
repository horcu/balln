<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>


    <declare-styleable name="FloatingLabelWidgetBase">
        <attr name="android:layout"/>
        <attr name="flw_labelText" format="string"/>
        <attr name="flw_floatOnFocus" format="boolean"/>
        <attr name="flw_labelTextAppearance" format="reference"/>
        <attr name="flw_labelTextColor" format="color"/>
        <attr name="flw_labelTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FloatingLabelTextViewBase">
        <attr name="android:drawableRight"/>
        <attr name="android:drawableLeft"/>
        <attr name="android:drawablePadding"/>
        <attr name="flw_inputWidgetTextAppearance" format="reference"/>
        <attr name="flw_inputWidgetTextColor" format="color"/>
        <attr name="flw_inputWidgetTextSize" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FloatingLabelEditText">
        <attr name="android:inputType"/>
    </declare-styleable>

    <declare-styleable name="FloatingLabelAutoCompleteTextView">
        <attr name="android:dropDownHeight"/>
        <attr name="android:dropDownWidth"/>
        <attr name="android:popupBackground"/>
        <attr name="android:completionThreshold"/>
        <attr name="android:completionHint"/>
    </declare-styleable>
</resources>
