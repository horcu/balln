    <style name="Theme.DataBinding" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="colorPrimary">@color/main_bg_color</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="android:actionBarStyle">@style/abStyle</item>
        <item name="colorAccent">@color/accent</item>
    </style>

<style name="abStyle" parent="Base.Widget.AppCompat.ActionBar">
    <item name="android:height">50dip</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="android:actionBarSize">50dp</item>
    <item name="colorAccent">@color/accent</item>
    <item name="android:backgroundStacked">@color/primary_dark</item>
    <item name="android:background">@color/primary_dark</item>

</style>

    <style name="FullscreenTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="android:windowFullscreen">true</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <style name="FloatingLabelWidget" parent="@android:style/Widget.Holo">
    </style>

    <style name="FloatingLabelWidget.DropDownItem" parent="@android:style/Widget.Holo.TextView">
        <item name="android:textSize">@dimen/flw_defaultDropDownItemTextSize</item>
        <item name="android:padding">@dimen/flw_defaultDropDownItemPadding</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="FloatingLabelWidget.ItemPicker">
    </style>

    <style name="FloatingLabelWidget.InstantPicker">
    </style>

    <style name="FloatingLabelWidget.ItemChooser">
    </style>

    <style name="FloatingLabelWidget.Label" parent="@android:style/Widget.Holo.TextView">
        <item name="android:lines">1</item>
    </style>

    <style name="FloatingLabelWidget.Label.EditText">
    </style>

    <style name="FloatingLabelWidget.InputWidget.EditText" parent="@android:style/Widget.Holo.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
    </style>

    <style name="FloatingLabelWidget.Label.AutoCompleteTextView">
    </style>

    <style name="FloatingLabelWidget.InputWidget.AutoCompleteTextView" parent="@android:style/Widget.Holo.AutoCompleteTextView">
        <item name="android:background">@drawable/bg_edittext</item>
    </style>

    <style name="FloatingLabelWidget.Label.Picker">
    </style>

    <style name="FloatingLabelWidget.InputWidget.Picker" parent="@android:style/Widget.Holo.TextView">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:drawableRight">@drawable/ic_picker</item>
    </style>

    <style name="FloatingLabelWidget.Label.Chooser">
    </style>

    <style name="FloatingLabelWidget.InputWidget.Chooser" parent="@android:style/Widget.Holo.TextView">
        <item name="android:background">#fafafa</item>
        <item name="android:drawableRight">@drawable/ic_player</item>
        <item name="android:textColor">#555555</item>

    </style>


</resources>
