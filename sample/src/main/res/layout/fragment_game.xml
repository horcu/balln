<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="game" type="com.horcu.apps.balln.models.game.Game"/>
        <variable name="offenseId" type="com.horcu.apps.balln.models.game.Offense"/>
        <variable name="defenseId" type="com.horcu.apps.balln.models.game.Defense"/>
        <variable name="specialTeamsId" type="com.horcu.apps.balln.models.game.SpecialTeams"/>
        <variable name="position" type="com.horcu.apps.balln.models.game.Position"/>
        <variable name="player" type="com.horcu.apps.balln.models.game.Player"/>


    </data>

    <RelativeLayout
        android:id="@+id/players_main"
        android:layout_width="match_parent"
        android:background="@color/bg"
        android:layout_height="match_parent">

        <!--header-->
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/away_image"
                android:layout_width="70dp"
                android:layout_height="70dp"

                android:background="#ffffff"
                android:layout_gravity="start"
                android:layout_marginRight="5dp"
                android:src="@drawable/ravens_away"
                />


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="1">



                <TextView
                    android:id="@+id/home_text_item_loc"
                    android:layout_width="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="15sp"
                    android:background="#ffffff"
                    android:textColor="#999999"
                    android:text=""/>
            </FrameLayout>


            <Space
                android:id="@+id/home_image_space"
                android:layout_alignParentRight="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:layout_marginLeft="5dp"
                android:src="@drawable/cardinals_home"
                android:background="#ffffff" />

            <ImageView
                android:id="@+id/home_image"
                android:layout_alignParentRight="true"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="end"
                android:layout_marginLeft="5dp"
                android:src="@drawable/cardinals_home"
                android:background="#ffffff" />


        </LinearLayout>

        <View
            android:id="@+id/top_bar_spacer_away"
            android:layout_width="match_parent"
            android:layout_below="@+id/top_bar"
            android:layout_height="0dp" />


        <ViewAnimator
            android:id="@+id/mathups_animator"
            android:layout_below="@+id/top_bar_spacer_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_away"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                card_view:cardElevation="2dp"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="3dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <!--qbs-->
                    <LinearLayout
                        android:id="@+id/home_qbs"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/player_chooser_height">

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/away_qb_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Quarterbacks"/>

                        <TextView
                            android:id="@+id/home_quarterback_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="#999999"
                            android:text="Joe Flacco"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_rbs"
                        android:layout_below="@+id/home_qbs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/player_chooser_height"
                        android:orientation="horizontal"
                        >

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/away_rb_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Running backs"/>

                        <TextView
                            android:id="@+id/away_runningback_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="#999999"
                            android:text="Justin Forsett"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_wrs"
                        android:layout_below="@+id/home_rbs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/player_chooser_height"
                        android:orientation="horizontal">

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/away_wr_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Wide receivers"/>

                        <TextView
                            android:id="@+id/home_widereceiver_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="#999999"
                            android:text="Marlon Brown"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_tes"
                        android:layout_below="@+id/home_wrs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/player_chooser_height"
                        android:orientation="horizontal">

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/away_te_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tight ends"/>

                        <TextView
                            android:id="@+id/home_tightends_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="#999999"
                            android:text="Marlon Brown"/>


                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_home"
                android:layout_gravity="top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardElevation="2dp"
                card_view:cardBackgroundColor="#ffffff"
                card_view:cardUseCompatPadding="true"
                card_view:cardCornerRadius="3dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <!--qbs-->
                    <LinearLayout
                        android:id="@+id/qbs"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="@dimen/player_chooser_height">

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/home_qb_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Quarterbacks"/>

                        <TextView
                            android:id="@+id/quarterback_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="#999999"
                            android:text="Joe Flacco"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rbs"
                        android:layout_below="@+id/qbs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/player_chooser_height"
                        android:orientation="horizontal"
                        >

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/home_rb_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Running backs"/>

                        <TextView
                            android:id="@+id/runningback_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="#999999"
                            android:text="Justin Forsett"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wrs"
                        android:layout_below="@+id/rbs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/player_chooser_height"
                        android:orientation="horizontal">

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/home_wr_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Wide receivers"/>

                        <TextView
                            android:id="@+id/widereceiver_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="#999999"
                            android:text="Marlon Brown"/>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tes"
                        android:layout_below="@+id/wrs"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/player_chooser_height"
                        android:orientation="horizontal">

                        <org.angmarch.views.NiceSpinner
                            android:id="@+id/home_te_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Tight ends"/>

                        <TextView
                            android:id="@+id/tightends_away"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:textColor="#999999"
                            android:text="Marlon Brown"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </ViewAnimator>

    </RelativeLayout>
</layout>