<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#e8eaf6"
    android:gravity="center_vertical"
    android:layout_marginTop="0dp"
    android:padding="9dp">

    <TextView android:id="@+id/scheduled_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:gravity="left"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:textColor="#9fa8da"
        android:text="Sun Sept 10 2014"/>

    <View
        android:id="@+id/spacer"
        android:layout_toEndOf="@+id/scheduled_date"
        android:layout_centerVertical="true"
        android:layout_width="80dp"
        android:layout_height="1dp"
       />

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/edit_wind_direction"
        android:layout_toStartOf="@+id/weather"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="{wi_direction_down_right}"
        android:layout_centerInParent="true"
        android:shadowColor="#22000000"
        android:shadowRadius="1"
        android:gravity="end"
        android:background="@android:color/transparent"
        android:textSize="25sp"
        android:textColor="@color/textcolor"
        android:layout_gravity="center"
        android:layout_marginEnd="0dp"
        />


    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/weather"
        android:layout_alignParentRight="true"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:text="{wi_day_sunny}"
        android:shadowColor="#22000000"
        android:shadowRadius="1"
        android:gravity="end"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        android:textSize="25sp"
        android:textColor="@color/textcolor"

        />

</RelativeLayout>